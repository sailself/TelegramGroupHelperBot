# Telegram Bot Settings
BOT_TOKEN=your_telegram_bot_token_here

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./bot.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# Webhook Settings
USE_WEBHOOK=false
WEBHOOK_URL=https://your-app-name.up.railway.app/webhook
WEBHOOK_PORT=8443

# Rate Limiting (seconds between requests)
RATE_LIMIT_SECONDS=15

# Telegram message length threshold before using Telegraph
TELEGRAM_MAX_LENGTH=4000

# Telegraph access token
TELEGRAPH_ACCESS_TOKEN=your_telegraph_access_token_here
TELEGRAPH_AUTHOR_NAME=your_telegraph_author_name
TELEGRAPH_AUTHOR_URL=your_telegraph_author_url

# Gemini API Settings
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Settings
# Model name to use (text-only model)
# Options: gemini-pro, gemini-1.5-pro
GEMINI_MODEL=gemini-2.0-flash
# Gemini Pro model is specifically using in factcheck
GEMINI_PRO_MODEL=gemini-2.5-pro-exp-03-25

# Gemini image generation model
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview
GEMINI_VIDEO_MODEL=veo-2.0-generate-001

# Use Gemini API Client to call VertexAI API
USE_VERTEX_API=false 
VERTEX_PROJECT_ID=your-project-id
VERTEX_LOCATION=global
VERTEX_VIDEO_MODEL=veo-3.0-generate-preview

# Temperature controls randomness (0.0-1.0, lower is more deterministic)
GEMINI_TEMPERATURE=0.4

# Top-k limits token selection to the k highest probability tokens
GEMINI_TOP_K=40

# Top-p limits token selection to a cumulative probability cutoff
GEMINI_TOP_P=0.95

# Maximum number of tokens to generate in the response
GEMINI_MAX_OUTPUT_TOKENS=2048

# OpenRouter API Settings
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_ALPHA_BASE_URL=https://openrouter.ai/api/alpha
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TOP_K=40
OPENROUTER_TOP_P=0.95
# Legacy Jina MCP settings (disabled by default)
ENABLE_JINA_MCP=false
JINA_AI_API_KEY=
JINA_READER_ENDPOINT=https://r.jina.ai/
JINA_SEARCH_ENDPOINT=https://s.jina.ai/search

# Exa search tool configuration
ENABLE_EXA_SEARCH=true
EXA_API_KEY=your_exa_api_key
EXA_SEARCH_ENDPOINT=https://api.exa.ai/search

# Optional: override the OpenRouter model list path
# OPENROUTER_MODELS_CONFIG_PATH=./openrouter_models.json
# Legacy fallbacks for direct command shortcuts (auto-filled from JSON when available)
DEEPSEEK_MODEL=deepseek/deepseek-chat
QWEN_MODEL=qwen/qwen-plus
GROK_MODEL=x-ai/grok-4
LLAMA_MODEL=meta-llama/llama-3.1-70b-instruct
GPT_MODEL=openai/gpt-4o-mini

ENV=development  # 'development' or 'production'

# CWD.PW API KEY
CWD_PW_API_KEY=your_cwd_pw_api_key

SUPPORT_LINK=your-support-site-link
SUPPORT_MESSAGE=your-message-to-supporters

# Only these commands will require whitelist access
ACCESS_CONTROLLED_COMMANDS=vid,factcheck

WHITELIST_FILE_PATH=your-whitelist-file.txt
